  <script>
    function openSurprise() {
      document.querySelector(".box").style.display = "none";
      document.getElementById("surprise").style.display = "block";
      document.getElementById("gallery").style.display = "grid";
      launchFireworks();
    }

    function playMusic() {
      window.open("https://www.youtube.com/watch?v=EqU4JtXwWlo", "_blank");
    }

    // Contadores
    function updateCounters() {
      const kissDate = new Date("2025-05-03T00:00:00");
      const loveDate = new Date("2025-06-12T00:00:00");
      const now = new Date();

      function formatCounter(start) {
        const diff = now - start;
        const months = Math.floor(diff / (1000*60*60*24*30));
        const days = Math.floor(diff / (1000*60*60*24)) % 30;
        const hours = Math.floor(diff / (1000*60*60)) % 24;
        const minutes = Math.floor(diff / (1000*60)) % 60;
        return `${months} meses, ${days} dias, ${hours} horas e ${minutes} minutos`;
      }

      document.getElementById("kissCounter").textContent = formatCounter(kissDate);
      document.getElementById("loveCounter").textContent = formatCounter(loveDate);
    }
    setInterval(updateCounters, 60000);
    updateCounters();

    // Cora√ß√µes caindo
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.style.left = Math.random() * 100 + "vw";
      heart.textContent = "üíñ";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }, 500);

    // Fogos
    function launchFireworks() {
      for (let i=0; i<20; i++) {
        const fw = document.createElement("div");
        fw.className = "firework";
        fw.style.left = Math.random()*100+"vw";
        fw.style.top = Math.random()*100+"vh";
        document.body.appendChild(fw);
        setTimeout(() => fw.remove(), 1000);
      }
    }
  </script>
